generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Article {
  id          Int       @id @default(autoincrement())
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  deletedAt   DateTime?
  isDeleted   Int?      @default(0)
  userId      Int
  title       String    
  content     String
  classify    String    
  coverImg    String    
  summary     String    
  views       Int       @default(1)
  likes       Int       @default(1)
  favorites   Int       @default(1)
  showNumber  Int       @default(1)
  status      String    
}
